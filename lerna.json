{
    "packages": ["packages/*"],
    "npmClient": "yarn",
    "useWorkspaces": true,
    "version": "independent",
    "command": {
        "version": {
            "allowBranch": "master",
            "message": "chore: publish",
            "ignoreChanges": [
                "*.stories.*",
                "**/__snapshots__/**",
                "*.test.*"
            ]
        },
        "publish": {
            "conventionalCommits": true
        }
    }
}
